{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "scripts": {
    "build": "rimraf ./public ./resources ./_vendor",
    "start:dev": "npm run build && hugo server --gc",
    "prod": "npm run build && hugo --gc --minify",
    "prepare": "husky install",
    "lint": "prettier . -c",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  },
  "cspell": {
    "ignoreWords": [
      "baetis",
      "Beartrap",
      "Bozeman",
      "callout",
      "dryflies",
      "dryfly",
      "Gallatin",
      "Hebgen",
      "humpys",
      "Lamson",
      "Layson",
      "Maddy",
      "monials",
      "Noonan",
      "nymphing",
      "salmonflies",
      "salmonfly",
      "spey",
      "stimulators",
      "testi",
      "trevally",
      "trico",
      "Tricos",
      "Vanderpool",
      "wulffs",
      "wowchemy",
      "wowchemycms",
      "formspree",
      "mjvlzkqj",
      "Mfud"
    ],
    "words": [
      "montanatrouthunters",
      "shoginn"
    ]
  },
  "devDependencies": {
    "cspell": "^6.8.1",
    "html-validate": "^7.3.3",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0"
  }
}
