{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "scripts": {
    "build": "run-s build:hugo",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock _vendor",
    "serve": "run-s serve:hugo",
    "serve:hugo": "cross-env SHOGINN_SCRIPTS_SERVE_HUGO=1 run-s _start:_hugo",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "_start:_hugo": "./bin/build/hugo.sh",
    "build:hugo": "cross-env SHOGINN_SCRIPTS_BUILD_HUGO=1 run-s clean:hugo _start:_hugo"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  },
  "cspell": {
    "ignoreWords": [
      "baetis",
      "Beartrap",
      "Bozeman",
      "callout",
      "dryflies",
      "dryfly",
      "Gallatin",
      "Hebgen",
      "humpys",
      "Lamson",
      "Layson",
      "Maddy",
      "monials",
      "Noonan",
      "nymphing",
      "salmonflies",
      "salmonfly",
      "spey",
      "stimulators",
      "testi",
      "trevally",
      "trico",
      "Tricos",
      "Vanderpool",
      "wulffs",
      "wowchemy",
      "wowchemycms",
      "formspree",
      "mjvlzkqj",
      "Mfud"
    ],
    "words": [
      "montanatrouthunters",
      "shoginn"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cspell": "^6.12.0",
    "html-validate": "^7.5.0",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0"
  }
}
