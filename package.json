{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "scripts": {
    "build": "run-s build:hugo",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock _vendor",
    "serve": "run-s serve:hugo",
    "serve:hugo": "cross-env SHOGINN_SCRIPTS_SERVE_HUGO=1 run-s _start:_hugo",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "_start:_hugo": "./shoginn_scripts/bin/build/hugo.sh",
    "build:hugo": "cross-env SHOGINN_SCRIPTS_BUILD_HUGO=1 run-s clean:hugo _start:_hugo",
    "update:deps": "npx ncu && npm install"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  },
  "cspell": {
    "ignoreWords": [
      "baetis",
      "Beartrap",
      "Bozeman",
      "callout",
      "dryflies",
      "dryfly",
      "Gallatin",
      "Hebgen",
      "humpys",
      "Lamson",
      "Layson",
      "Maddy",
      "monials",
      "Noonan",
      "nymphing",
      "salmonflies",
      "salmonfly",
      "spey",
      "stimulators",
      "testi",
      "trevally",
      "trico",
      "Tricos",
      "Vanderpool",
      "wulffs",
      "wowchemy",
      "wowchemycms",
      "formspree",
      "mjvlzkqj",
      "Mfud"
    ],
    "words": [
      "montanatrouthunters",
      "shoginn",
      "tailwater"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cspell": "^8.3.2",
    "html-validate": "^8.9.1",
    "html-validate-markdown": "^4.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0"
  },
  "version": "1.1.0"
}
