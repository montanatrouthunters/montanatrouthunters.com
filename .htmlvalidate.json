{
  "elements": ["html5"],
  "extends": ["html-validate:recommended"],
  "transform": {
    "^.*\\.md$": "html-validate-markdown"
  },
  "rules": {
    "attr-quotes": "off",
    "no-inline-style": "off",
    "doctype-style": "off",
    "wcag/h37": "off",
    "wcag/h32": "off",
    "no-trailing-whitespace": "off"
  }
}
